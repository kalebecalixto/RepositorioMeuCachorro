<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="@color/black">
        <shape>
            <solid
                android:color="#CDCDCD" />
            <stroke
                android:width="1px"
                android:color="#ff888888" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
     <item android:state_enabled="false" android:color="#949494">
        <shape>
            <solid
                android:color="#CDCDCD" /> 
            <stroke
                android:width="1px"
                android:color="#ff888888" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:color="@color/black">
        <shape>
            <gradient
                android:startColor="#F5F5F5"
                android:endColor="#CDCDCD"
                android:angle="270" />
            <stroke
                android:width="1px"
                android:color="#ff888888" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>