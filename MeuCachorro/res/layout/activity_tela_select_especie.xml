<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TelaSelectEspecieActivity" >

    <ScrollView
        android:id="@+id/scrollViewEspecie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/layouttelaSelectEspecie"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="top"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/tituloEspecie"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/tituloselectEspecie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/telaselectespeciel" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tituloEspecie"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tituloEspecie"
                android:layout_below="@+id/tituloEspecie"
                android:layout_gravity="center"
                android:gravity="top|center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/especieCachorro"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:clickable="true"
                    android:src="@drawable/especiecachorro" />

                <ImageView
                    android:id="@+id/especieGato"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:src="@drawable/especiegato" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>